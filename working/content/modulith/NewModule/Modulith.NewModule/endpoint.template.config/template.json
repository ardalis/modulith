{
  "$schema": "http://json.schemastore.org/template",
  "author": "David Chaparro",
  "classifications": [
    "Web",
    "Web API",
    "API",
    "Service",
    "Modular",
    "Monolith"
  ],
  "name": "modulith-basic-endpoint",
  "description": "Creates a 3 layered module template",
  "precedence": "0",
  "identity": "Ardalis.Modulith.Basic.Endpoint.1.0",
  "shortName": "modulith-basic-endpoint",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "defaultName": "NewModule",
  "preferDefaultName": true,
  "preferNameDirectory": true,
  "symbols": {
    "root-namespace": {
      "type": "bind",
      "binding": "msbuild:RootNamespace"
    },
    "solution-name": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "parameters": {
        "source": "root-namespace",
        "steps": [
          {
            "regex": "\\.\\w+",
            "replacement": ""
          }
        ]
      },
      "fileRename": "Modulith",
      "replaces": "Modulith"
    },
    "generated-module-name": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "parameters": {
        "source": "root-namespace",
        "steps": [
          {
            "regex": "^[^.]+\\.",
            "replacement": ""
          }
        ]
      },
      "fileRename": "NewModule",
      "replaces": "NewModule"
    },
    "module-name": {
      "displayName": "module-name",
      "description": "The name of the module where the endpoint should be added.",
      "type": "parameter"
    },
    "endpoint-name": {
      "type": "parameter",
      "datatype": "string",
      "description": "The name of the new or existing module where you want to instantiate the template.",
      "replaces": "WeatherForecast",
      "fileRename": "WeatherForecast"
    },
    "with-ui": {
      "displayName": "With UI",
      "description": "Includes blazor UI projects inside the specified module.",
      "type": "parameter",
      "datatype": "bool"
    },
    "withui": {
      "displayName": "With UI",
      "type": "computed",
      "value": "with-ui"
    }
  },
  "sources": [
    {
      "source": "../",
      "target": "../",
      "include": [
        "**/*NewModule*/**/*WeatherForecast**"
      ],
      "modifiers": [
        {
          "condition": "!(withui)",
          "exclude": [
            "NewModule/Modulith.NewModule.UI/**/*"
          ]
        },
        {
          "condition": "(withui)",
          "exclude": [
            "**/Modulith.NewModule/WeatherForecastEndpoints/List.Response.cs",
            "**/Modulith.NewModule/IWeatherForecastService.cs"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "condition": "(withui)",
      "path": "Modulith.NewModule.csproj"
    }
  ],
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "[PA1] Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}