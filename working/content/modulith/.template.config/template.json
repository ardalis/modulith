{
  "$schema": "http://json.schemastore.org/template",
  "author": "David Chaparro",
  "classifications": [
    "Web",
    "Web API",
    "API",
    "Service",
    "Modular",
    "Monolith"
  ],
  "name": "modulith",
  "groupIdentity": "Ardalis.Modulith",
  "precedence": "20",
  "identity": "Ardalis.Modulith.1.0",
  "shortName": "modulith",
  "description": "The modular solution template containing a single module.",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "defaultName": "Modulith",
  "sourceName": "Modulith",
  "preferDefaultName": true,
  "preferNameDirectory": true,
  "symbols": {
    "template" : {
      "type": "parameter",
      "description": "The modulith template to instantiate.",
      "datatype": "choice",
      "choices": [{
        "choice": "solution",
        "description": "The modular solution template containing a single module.",
        "displayName": "Modulith solution."
        }],
      "displayName": "Template type",
      "defaultValue": "solution"
    },
    "project": {
      "type": "bind",
      "binding": "msbuild:RootNamespace",
      "fileRename": "Modulith",
      "replaces": "Modulith",
      "defaultValue": "Modulith"
    },
    "add": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "solution",
          "description": "Starter solution with one basic module"
        },
        {
          "choice": "basic-module",
          "description": "Basic module"
        },
        {
          "choice": "ddd-module",
          "description": "Ddd module"
        },
        {
          "choice": "crud",
          "description": "Adds a set of Get Post Put and Delete endpoints"
        }
      ],
      "defaultValue": "solution",
      "description": "The type of authentication to use"
    },
    "is-solution": {
      "type": "computed",
      "value": "(add == \"solution\")"
    },
    "with-module": {
      "type": "parameter",
      "datatype": "string",
      "fileRename": "_Module",
      "replaces": "_Module",
      "forms": {
        "global": [
          "ddd",
          "new"
        ]
      }
    },
    "module-name": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "description": "The name of the new or existing module where you want to instantiate the template.",
      "fileRename": "_Module",
      "replaces": "_Module",
      "forms": {
        "global": [
          "ddd",
          "new"
        ]
      }
    },
    "with-name": {
      "type": "parameter",
      "datatype": "string",
      "description": "The name of the new or existing module where you want to instantiate the template.",
      "fileRename": "_Module",
      "replaces": "_Module",
      "forms": {
        "global": [
          "ddd",
          "new"
        ]
      }
    },
    "endpoint-name": {
      "displayName": "Endpoint Name",
      "description": "Name of the endpoints' folder",
      "type": "parameter",
      "datatype": "string",
      "fileRename": "WeatherForecast",
      "replaces": "WeatherForecast"
    },
    "to": {
      "displayName": "To",
      "type": "parameter",
      "datatype": "string",
      "description": "[Deprecating: use 'solution'] The name of the solution and folder where the module or item will be added."
    },
    "solution": {
      "displayName": "Solution",
      "type": "parameter",
      "datatype": "string",
      "description": "The name of the solution and folder where the module or item will be added."
    },
    "solution-name": {
      "type": "generated",
      "generator": "coalesce",
      "datatype": "string",
      "parameters": {
        "sourceVariableName": "solution",
        "fallbackVariableName": "to"
      },
      "fileRename": "Modulith",
      "replaces": "Modulith"
    },
    "with-ui": {
      "displayName": "With UI",
      "description": "Includes blazor UI projects inside the specified module.",
      "type": "parameter",
      "datatype": "bool"
    },
    "WithUi": {
      "type": "parameter",
      "datatype": "bool"
    },
    "withui": {
      "displayName": "With UI",
      "type": "generated",
      "generator": "coalesce",
      "description": "Wether to add UI Blazor projects, and configuration",
      "datatype": "bool",
      "defaultValue": "false",
      "parameters": {
        "sourceVariableName": "with-ui",
        "fallbackVariableName": "WithUi"
      }
    }
  },
  "forms": {
    "new": {
      "identifier": "replace",
      "pattern": "^_",
      "replacement": "Ddd"
    },
    "ddd": {
      "identifier": "replace",
      "pattern": "^_",
      "replacement": "New"
    }
  },
  "sources": [
    {
      "source": "../Modulith",
      "target": ".",
      "condition": "(is-solution)",
      "include": [
        "Modulith.SharedKernel/**/*",
        "Modulith.Web/**/*",
        "Modulith.Web/Modulith.Web.csproj",
        "Directory.Build.props",
        "NewModule/**/*",
        ".gitignore",
        "Directory.Build.props",
        "Modulith.sln",
        "Shared/**/*"
      ],
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/*.template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json"
      ],
      "modifiers": [
        {
          "condition": "!(withui)",
          "exclude": [
            "Shared/Modulith.UI/**/*",
            "NewModule/Modulith.NewModule.UI/**/*",
            "NewModule/Modulith.NewModule.HttpModels/**/*",
            "Modulith.Web/wwwroot/**/*",
            "Modulith.Web/Components/**/*",
            "Modulith.Web/ConventionBuilderExtensions.cs"
          ]
        },
        {
          "condition": "(withui)",
          "exclude": [
            "NewModule/Modulith.NewModule/WeatherForecastEndpoints/List.Response.cs",
            "NewModule/Modulith.NewModule/IWeatherForecastService.cs"
          ]
        }
      ]
    },
    {
      "source": "./",
      "target": "./",
      "condition": "(add == \"basic-module\")",
      "include": [
        "NewModule/**/*"
      ],
      "modifiers": [
        {
          "condition": "!(withui)",
          "exclude": [
            "NewModule/Modulith.NewModule.UI/**/*"
          ]
        },
        {
          "condition": "(withui)",
          "exclude": [
            "NewModule/Modulith.NewModule/WeatherForecastEndpoints/List.Response.cs",
            "NewModule/Modulith.NewModule/IWeatherForecastService.cs"
          ]
        }
      ]
    },
    {
      "source": "./",
      "target": "./",
      "condition": "(add == \"ddd-module\")",
      "include": [
        "DddModule/**/*"
      ]
    },
    {
      "source": "./",
      "target": ".",
      "condition": "(add == \"crud\")",
      "include": [
        "NewModule/Modulith.NewModule/WeatherForecastEndpoints/*"
      ],
      "modifiers": [
        {
          "condition": "(withui)",
          "exclude": [
            "NewModule/Modulith.NewModule/WeatherForecastEndpoints/List.Response.cs"
          ],
          "include": [
            "NewModule/Modulith.NewModule.HttpModels/WeatherForecastResponse.cs",
            "NewModule/Modulith.NewModule.HttpModels/IWeatherForecastService.cs",
            "NewModule/Modulith.NewModule/ServerWeatherForecastService.cs"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "condition": "(withui)",
      "path": "Shared/Modulith.UI/Modulith.UI.csproj"
    },
    {
      "condition": "(withui)",
      "path": "NewModule/Modulith.NewModule.UI/Modulith.NewModule.UI.csproj"
    },
    {
      "condition": "(withui)",
      "path": "NewModule/Modulith.NewModule.HttpModels/Modulith.NewModule.HttpModels.csproj"
    },
    {
      "path": "Modulith.Web/Modulith.Web.csproj"
    },
    {
      "path": "Shared/Modulith.SharedKernel/Modulith.SharedKernel.csproj"
    },
    {
      "path": "NewModule/Modulith.NewModule/Modulith.NewModule.csproj"
    },
    {
      "path": "NewModule/Modulith.NewModule.Contracts/Modulith.NewModule.Contracts.csproj"
    },
    {
      "path": "NewModule/Modulith.NewModule.Tests/Modulith.NewModule.Tests.csproj"
    }
  ],
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [{
        "text": "[PA1] Run 'dotnet restore'"
      }],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "condition": "(add != \"crud\")",
      "description": "Add projects to solution",
      "manualInstructions": [
        {
          "text": "[PA2] Add generated project(s) to solution manually. Modulith.sln"
        }
      ],
      "applyFileRenamesToManualInstructions": true,
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "condition": "(!is-solution)",
      "description": "Adding the new module as a reference to Web project",
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "\n‚ö†Ô∏è This is only supported in .Net SDK 9.0.100-preview.7 and newer.\nüîß For earlier versions please run:\n\n\tdotnet add Modulith.Web/Modulith.Web.csproj reference NewModule/Modulith.NewModule/Modulith.NewModule.csproj"
        }
      ],
      "applyFileRenamesToManualInstructions": true,
      "applyFileRenamesToArgs": [
        "targetFiles",
        "reference"
      ],
      "args": {
        "targetFiles": [
          "Modulith.Web.csproj"
        ],
        "referenceType": "project",
        "reference": "NewModule/Modulith.NewModule/Modulith.NewModule.csproj"
      }
    },
    {
      "condition": "(withui && !is-solution)",
      "description": "Adding the new UI module as a reference to UI shared project",
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "\n‚ö†Ô∏è This is only supported in .Net SDK 9.0.100-preview.7 and newer.\nüîß For earlier versions please run:\n\n\tdotnet add Shared/Modulith.UI/Modulith.UI.csproj reference NewModule/Modulith.NewModule.UI/Modulith.NewModule.UI.csproj"
        }
      ],
      "applyFileRenamesToManualInstructions": true,
      "applyFileRenamesToArgs": [
        "targetFiles",
        "reference"
      ],
      "args": {
        "targetFiles": [
          "Shared/Modulith.UI/Modulith.UI.csproj"
        ],
        "referenceType": "project",
        "reference": "NewModule/Modulith.NewModule.UI/Modulith.NewModule.UI.csproj"
      }
    },
    {
      "condition": "(!is-solution && add != \"crud\")",
      "description": "Adding the new module as a reference to SharedKernel",
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "\n‚ö†Ô∏è This is only supported in .Net SDK 9.0.100-preview.7 and newer.\nüîß For earlier versions please run:\n\n\tdotnet add NewModule/Modulith.NewModule/Modulith.NewModule.csproj reference Shared/Modulith.SharedKernel/Modulith.SharedKernel.csproj"
        }
      ],
      "applyFileRenamesToManualInstructions": true,
      "applyFileRenamesToArgs": [
        "targetFiles",
        "reference"
      ],
      "args": {
        "targetFiles": [
          "NewModule/Modulith.NewModule/Modulith.NewModule.csproj"
        ],
        "referenceType": "project",
        "reference": "Shared/Modulith.SharedKernel/Modulith.SharedKernel.csproj"
      }
    }
  ]
}
