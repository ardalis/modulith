{
  "$schema": "http://json.schemastore.org/template",
  "author": "David Chaparro",
  "classifications": [
    "Web",
    "Web API",
    "API",
    "Service",
    "Modular",
    "Monolith"
  ],
  "name": "modulith",
  "groupIdentity": "Ardalis.Modulith",
  "precedence": "40",
  "identity": "Ardalis.Modulith.Basic.1.0",
  "shortName": "modulith",
  "description": "A 3 layered module template.",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "defaultName": "NewModule",
  "preferDefaultName": true,
  "preferNameDirectory": true,
  "symbols": {
    "template" : {
      "type": "parameter",
      "description": "The modulith template to instantiate.",
      "datatype": "choice",
      "choices": [{
        "choice": "basic",
        "description": "A basic 3 layer module",
        "displayName": "Basic Module"
        }],
      "displayName": "Template type",
      "defaultValue": "basic"
    },
    "solution-name": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "parameters": {
        "source": "root-namespace",              
        "steps": [
          {
            "regex": "\\.\\w+",      
            "replacement": ""   
          }
        ]
      },
      "fileRename": "_Modulith_",
      "replaces": "_Modulith_"
    },
    "root-namespace": {
      "type": "bind",
      "binding": "msbuild:RootNamespace"
    },
    "module-name": {
      "type": "parameter",
      "datatype": "string",
      "description": "The name of the new or existing module where you want to instantiate the template.",
      "fileRename": "NewModule",
      "replaces": "NewModule"
    },
    "with-ui": {
      "displayName": "With UI",
      "description": "Includes blazor UI projects inside the specified module.",
      "type": "parameter",
      "datatype": "bool"
    },
    "withui": {
      "displayName": "With UI",
      "type": "computed",
      "value": "with-ui"
    }
  },
  "sources": [
    {
      "source": ".",
      "target": "../",
      "include": [
        "NewModule/**/*"
      ],
      "modifiers": [
        {
          "condition": "!(withui)",
          "exclude": [
            "NewModule/_Modulith_.NewModule.UI/**/*"
          ]
        },
        {
          "condition": "(withui)",
          "exclude": [
            "NewModule/_Modulith_.NewModule/WeatherForecastEndpoints/List.Response.cs",
            "NewModule/_Modulith_.NewModule/IWeatherForecastService.cs"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "condition": "(withui)",
      "path": "../Shared/_Modulith_.UI/_Modulith_.UI.csproj"
    },
    {
      "condition": "(withui)",
      "path": "../NewModule/_Modulith_.NewModule.UI/_Modulith_.NewModule.UI.csproj"
    },
    {
      "condition": "(withui)",
      "path": "../NewModule/_Modulith_.NewModule.HttpModels/_Modulith_.NewModule.HttpModels.csproj"
    },
    {
      "path": "../Shared/_Modulith_.SharedKernel/_Modulith_.SharedKernel.csproj"
    },
    {
      "path": "../NewModule/_Modulith_.NewModule/_Modulith_.NewModule.csproj"
    },
    {
      "path": "../NewModule/_Modulith_.NewModule.Contracts/_Modulith_.NewModule.Contracts.csproj"
    },
    {
      "path": "../NewModule/_Modulith_.NewModule.Tests/_Modulith_.NewModule.Tests.csproj"
    }
  ],
  "constraints": {
    "csharp-only": {
      "type": "project-capability",
      "args": "Modulith.Solution"
    },
    "sdk-only": {
      "type": "host",
      "args": [{
          "hostname": "dotnetcli"
      }]
    }
  },
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [{
        "text": "Run 'dotnet restore'"
      }],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "description": "Add projects to solution",
      "manualInstructions": [
        {
          "text": "[PA 1] Add generated project(s) to solution manually."
        }
      ],
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "continueOnError": true
    },
    {
      "description": "Adding the new module as a reference to Web project",
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "[PA 2] Manually add the reference in the web project to the new project"
        }
      ],
      "applyFileRenamesToArgs": [
        "targetFiles",
        "reference"
      ],
      "args": {
        "targetFiles": [
          "../_Modulith_.Web/_Modulith_.Web.csproj"
        ],
        "referenceType": "project",
        "reference": "../NewModule/_Modulith_.NewModule/_Modulith_.NewModule.csproj"
      }
    },
    {
      "condition": "(withui)",
      "description": "Adding the new UI module as a reference to UI shared project",
      "actionId": "B17581D1-C5C9-4489-8F0A-004BE667B814",
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "[PA3] Manually add the reference in the UI project to the new project"
        }
      ],
      "applyFileRenamesToArgs": [
        "targetFiles",
        "reference"
      ],
      "args": {
        "targetFiles": [
          "../Shared/_Modulith_.UI/_Modulith_.UI.csproj"
        ],
        "referenceType": "project",
        "reference": "../NewModule/_Modulith_.NewModule.UI/_Modulith_.NewModule.UI.csproj"
      }
    }
  ]
}
